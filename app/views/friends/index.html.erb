<% if user_signed_in? %>


    <h1>Friends</h1>

    <%= Date.today.strftime("%A %-d %B") %>

    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
          <tr>
            <th> Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Twitter</th>
            
            <th> </th>
          </tr>
        </thead>

        <tbody>
          <% @friends.each do |friend| %>
            <% if friend.user == current_user %>
            <tr>
              <td>
                <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
              </td>
              
              <td><%= friend.email %></td>
              <td><%= friend.phone %></td>
              <td><%= friend.twitter %></td>
              
              

              
            
              <td><%= button_to 'Delete', friend, method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-outline-danger btn-sm" %>
              </td>
              
            </tr>
          <% end %> 
          <% end %>
        </tbody>
      </table>
     
    <%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>

<% else %>
  <h1>Hello Woeld!</h1>
<% end %>